.tabbar_nav {
		/* flex: 1; */
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-orient: vertical;
		-webkit-box-direction: normal;
		-webkit-flex-direction: column;
		        flex-direction: column;
		-webkit-box-pack: center;
		-webkit-justify-content: center;
		        justify-content: center;
		-webkit-box-align: center;
		-webkit-align-items: center;
		        align-items: center;
		font-size: 20rpx;
		height: 100%;
		padding: 5rpx 0px 0px 0px;
		position: relative;
}
.tabbar_icon {
		width: 55rpx;
		height: 55rpx;
		padding-bottom: 2rpx;
}
.special-wrapper {
		position: absolute;
		/* left: 77rpx; */
		top: -36rpx;
		width: 96rpx;
		height: 96rpx;
		border-radius: 50%;
		border-top: 2rpx solid #f7f7f7;
		background-color: #fff;
		text-align: center;
		box-sizing: border-box;
		padding: 6rpx;
}
.special-wrapper .tabbar_icon {
		width: 85rpx;
		height: 85rpx;
}
.special-text-wrapper {
		width: 56rpx;
		height: 56rpx;
}
text {
		padding-bottom: 5rpx;
}



