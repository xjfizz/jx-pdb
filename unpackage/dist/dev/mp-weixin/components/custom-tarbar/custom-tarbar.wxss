0% {
        -webkit-transform: scale(1);
                transform: scale(1);
}
50% {
        -webkit-transform: scale(1.4);
                transform: scale(1.4);
}
100% {
        -webkit-transform: scale(1);
                transform: scale(1);
}
}
.acImg{
	-webkit-animation: bounce .3s;
	        animation: bounce .3s;
}



