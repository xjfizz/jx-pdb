.tabs {
  position: fixed;
  height: 100vh;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.tabs .active-switch {
  overflow: scroll;
}
.tabs .active-switch .switch-container {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
}
.tabs .active-switch .switch-container .focus-line {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  width: 250rpx;
  position: absolute;
  bottom: 0;
  -webkit-transition: 0.3s;
  transition: 0.3s;
}
.tabs .active-switch .switch-container .focus-line.fix {
  width: 250rpx;
}
.tabs .item-line {
  width: 40rpx;
  border-bottom: 5rpx solid #ffc800;
  border-radius: 15rpx;
  margin: auto;
}
.active-item {
  position: relative;
  min-width: 160rpx;
  width: 160rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  height: 80rpx;
  -webkit-transition: 0.3s;
  transition: 0.3s;
  background-color: #fff;
  color: #333;
  text-align: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  border-bottom: 1rpx solid #f5f5f5;
}
.active-item.focus {
  background: #fff;
  color: #ffc800;
  -webkit-transition-duration: 0.3s;
          transition-duration: 0.3s;
}
.active-item.fix {
  width: 250rpx;
}
.active-item .item {
  padding: 0 5rpx;
  overflow: hidden;
  font-size: 30rpx;
}
.tab-pane-view {
  overflow: hidden;
  background-color: #f7f7f7;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.tab-pane-view .tab-pane-group {
  display: block;
  white-space: nowrap;
  -webkit-transition: all 0.3s;
  transition: all 0.3s;
  width: 100%;
  overflow: visible;
  will-change: transform, left, top;
  min-height: 100rpx;
  height: 100%;
}
.tab-pane-view .tab-pane-group .tab-pane-item {
  width: 100%;
  min-height: 100rpx;
  display: inline-block;
  white-space: initial;
  vertical-align: top;
  font-size: 24rpx;
  box-sizing: border-box;
  overflow: auto;
}

