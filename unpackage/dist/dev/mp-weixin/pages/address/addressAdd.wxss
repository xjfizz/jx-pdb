.page .main {
  width: 100%;
  margin-bottom: 150rpx;
  background-color: #F7F7F7;
}
.page .main .main-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.page .main .main-content .content {
  width: 100%;
  background-color: #FFFFFF;
  padding: 30rpx;
}
.page .main .main-content .content .item {
  margin-top: 20rpx;
}
.page .main .main-content .content .item .item-title {
  color: #333333;
  font-size: 28rpx;
}
.page .main .main-content .content .item .item-input {
  margin-top: 15rpx;
}
.page .main .main-content .content .item .item-input input {
  background-color: #F7F7F7 !important;
  border-radius: 15rpx;
  border: 1px solid #F7F7F7;
  height: 70rpx;
  padding: 15rpx;
}
.page .main .main-content .content .item .item-input .input-regions {
  background-color: #F7F7F7 !important;
  border-radius: 15rpx;
  border: 1px solid #F7F7F7;
  height: 70rpx;
  padding: 15rpx;
}
.page .main .main-content .sub-btn:active {
  opacity: 0.55;
}
.page .main .main-content .sub-btn {
  width: 80%;
  height: 70rpx;
  border-radius: 15rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-top: 30rpx;
  background-color: #FFC800;
  color: #333333;
  font-size: 25rpx;
}
.page .main .main-content .sub-btn-no {
  background-color: #FFEBA4;
  color: #FFFFFF;
}

